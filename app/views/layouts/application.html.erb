<!DOCTYPE html>
<html>
  <head>
    <title>Friends</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
    <%= render "home/header" %>
    <div class="container">
      <br>
      <!-- This displays a notice, if not partial is called in any webpage -->
      <% if notice %>
        <%= render "layouts/alerts" %>
      <%end%>

      <%= yield %>
    </div>
  </body>
</html>
